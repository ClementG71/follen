<BaseLayout title="Accueil - Follen">
    <!-- 1. Hero Carousel -->
    <ScrollSnapCarousel articles={carouselArticles} />

    <!-- 2. Lien Plus d'articles -->
    <section class="py-8 bg-white">
        <div class="container mx-auto px-6 text-center">
            <a 
                href="/articles" 
                class="inline-flex items-center text-slate-600 hover:text-blue-700 transition-colors font-medium"
            >
                Voir tous les articles
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </a>
        </div>
    </section>

    <!-- 3. Liens Institutionnels -->
    <InstitutionalLinks links={institutionalLinks} />

    <!-- 4. News Feed -->
    <NewsFeed articles={newsFeedArticles} title="Actualités" />

    <!-- 5. Action Cards -->
    <ActionCardsSection 
        title="Agir avec nous"
        description="Découvrez comment vous engager et participer à nos actions"
        cards={actionCards}
    />

    <!-- 6. Newsletter -->
    <Newsletter />
</BaseLayout>
