---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getStaticPages } from '../lib/wagtail';

// ✅ SSG: Lister tous les slugs à générer au build
export async function getStaticPaths() {
    const pages = await getStaticPages(100);
    
    return pages.map((page) => ({
        params: { slug: page.meta.slug },
        props: { page }
    }));
}

// Props passées par getStaticPaths
interface Props {
    page: any;
}

const { page } = Astro.props;
---

<BaseLayout title={page?.title || 'Page non trouvée'}>
    <article class="max-w-4xl mx-auto px-4 py-12">
        {page ? (
            <>
                {/* Hero Image */}
                {page.header_image?.meta?.download_url && (
                    <div class="relative w-full rounded-2xl overflow-hidden shadow-xl aspect-video mb-8">
                        <img 
                            src={page.header_image.meta.download_url} 
                            alt={page.title} 
                            class="w-full h-full object-cover"
                            loading="eager"
                            decoding="async"
                        />
                    </div>
                )}
                
                {/* Title */}
                <header class="mb-8">
                    <h1 class="text-3xl md:text-4xl font-bold text-slate-900">
                        {page.title}
                    </h1>
                </header>
                
                {/* Main Content */}
                <div class="prose prose-slate prose-lg max-w-none">
                    <Fragment set:html={page.content} />
                </div>
                
                {/* Back Link */}
                <footer class="mt-12 pt-8 border-t border-slate-200">
                    <a 
                        href="/" 
                        class="inline-flex items-center gap-2 text-follen-red hover:text-follen-red/80 font-medium transition-colors"
                    >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                        </svg>
                        Retour à l'accueil
                    </a>
                </footer>
            </>
        ) : (
            <div class="text-center py-16">
                <h1 class="text-3xl font-bold text-slate-900 mb-4">Page non trouvée</h1>
                <p class="text-slate-600 mb-8">La page que vous recherchez n'existe pas.</p>
                <a 
                    href="/" 
                    class="inline-flex items-center gap-2 bg-follen-red text-white px-6 py-3 rounded-lg hover:bg-follen-red/90 transition-colors"
                >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                    </svg>
                    Retour à l'accueil
                </a>
            </div>
        )}
    </article>
</BaseLayout>

