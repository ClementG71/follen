---
// Liens Top Bar
const topLinks = [
    { label: 'Nos revendications', href: '/revendications' },
    { label: 'Devenir partenaire', href: '/partenaires' },
    { label: 'Contact', href: '/contact' },
];

// Liens Main Nav
const mainLinks = [
    { label: 'Accueil', href: '/' },
    { label: 'Agriculture', href: '/agriculture' },
    { label: 'Intérieur', href: '/interieur' },
    { label: 'Écologie', href: '/ecologie' },
    { label: 'Archives', href: '/archives' },
    { label: 'Revendications', href: '/revendications' },
    { label: 'Adhésion', href: '/adhesion', highlight: true },
];
---

<header class="w-full z-50">
    <!-- Top Bar (Red) -->
    <div class="bg-follen-red text-white text-sm py-2 px-4">
        <div class="container mx-auto flex justify-end items-center gap-6">
            {topLinks.map(link => (
                <a href={link.href} class="flex items-center gap-2 hover:text-follen-red-100 transition-colors">
                    <span>{link.label}</span>
                </a>
            ))}
        </div>
    </div>

    <!-- Main Navbar (White, Sticky) -->
    <nav class="sticky top-0 bg-white/95 backdrop-blur shadow-sm border-b border-gray-100 z-40">
        <div class="container mx-auto px-4 h-20">
            <!-- Flex Layout Centré -->
            <div class="flex items-center justify-center h-full relative">
                
                <!-- Left Links (Desktop) -->
                <div class="hidden md:flex items-center gap-8 mr-12">
                    <a href="/" class="font-medium text-gray-700 hover:text-follen-red transition-colors text-lg">
                        Accueil
                    </a>
                    <a href="/agriculture" class="font-medium text-gray-700 hover:text-follen-green transition-colors text-lg">
                        Agriculture
                    </a>
                </div>

                <!-- Center Logo -->
                <a href="/" class="flex items-center gap-2 group shrink-0 transform hover:scale-105 transition-transform duration-200">
                    <div class="w-12 h-12 bg-gradient-to-br from-follen-red to-red-600 rounded-xl flex items-center justify-center shadow-md group-hover:shadow-lg transition-all">
                        <span class="text-white font-bold text-2xl">F</span>
                    </div>
                    <span class="font-bold text-3xl text-gray-900 tracking-tight hidden sm:block">Follen</span>
                </a>

                <!-- Right Links (Desktop) -->
                <div class="hidden md:flex items-center gap-6 ml-12">
                    <a href="/ecologie" class="font-medium text-gray-700 hover:text-follen-blue transition-colors text-lg">
                        Écologie
                    </a>
                    <a href="/interieur" class="font-medium text-gray-700 hover:text-follen-yellow transition-colors text-lg">
                        Intérieur
                    </a>
                    <a href="/archives" class="font-medium text-gray-700 hover:text-follen-red transition-colors text-lg">
                        Archives
                    </a>
                    <a href="/adhesion" class="ml-2 bg-follen-red text-white px-5 py-2 rounded-lg font-semibold hover:bg-red-700 transition-colors shadow-sm flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                        </svg>
                        Adhésion
                    </a>
                </div>

                <!-- Mobile Menu Button (Absolute right) -->
                <div class="md:hidden absolute right-0">
                    <button id="mobile-menu-toggle" class="p-2 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" /></svg>
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Mobile Menu Overlay (Hidden by default) -->
        <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-100 absolute w-full left-0 top-full shadow-lg">
            <div class="p-4 flex flex-col gap-4">
                {mainLinks.map(link => (
                    link.highlight ? (
                        <a href={link.href} class="block py-3 px-4 text-lg text-white font-semibold bg-follen-red rounded-lg text-center hover:bg-red-700 transition-colors">
                            {link.label}
                        </a>
                    ) : (
                        <a href={link.href} class="block py-3 text-lg text-gray-800 font-medium border-b border-gray-50 last:border-0 hover:text-follen-red transition-colors">
                            {link.label}
                        </a>
                    )
                ))}
                <div class="mt-4 pt-4 border-t border-gray-100">
                    <p class="text-sm text-gray-500 mb-2 uppercase tracking-wide">Liens utiles</p>
                    {topLinks.map(link => (
                        <a href={link.href} class="block py-2 text-follen-red font-medium hover:text-red-800 transition-colors">
                            {link.label}
                        </a>
                    ))}
                </div>
            </div>
        </div>
    </nav>
</header>

<script>
    const btn = document.getElementById('mobile-menu-toggle');
    const menu = document.getElementById('mobile-menu');
    btn?.addEventListener('click', () => {
        menu?.classList.toggle('hidden');
    });
</script>
